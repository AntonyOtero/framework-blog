---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header class="border-b border-border border-seasalt">
    <div class="container mx-auto px-6 py-4">
        <nav class="flex items-center justify-between">
            <div class="flex items-center space-x-2">
                <div class="w-8 h-8 bg-seasalt rounded-full flex items-center justify-center">
                    <span class="text-night font-medium">
                        AO
                    </span>
                </div>
                <span class="text-lg font-medium">
                    {SITE_TITLE}
                </span>
            </div>
            <div class="hidden md:flex items-center space-x-8">
                <a href="/" class="text-seasalt/70 hover:text-seasalt transition-opacity">
                    Home
                </a>
                <a href="/" class="text-seasalt/70 hover:text-seasalt transition-opacity">
                    Archive
                </a>
                <a href="/about" class="text-seasalt/70 hover:text-seasalt transition-opacity">
